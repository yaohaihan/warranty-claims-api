{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug NestJS App",
        "program": "${workspaceFolder}/dist/main.js",  // 替换为你的项目入口文件路径
        "cwd": "${workspaceFolder}",
        "runtimeArgs": ["--nolazy", "--inspect"],
        "restart": true,
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "outFiles": ["${workspaceFolder}/dist/**/*.js"]
      }
    ]
  }
  